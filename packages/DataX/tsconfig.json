{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "./es",
    "rootDir": "./src",
    "outDir": "./es",
    "baseUrl": ".",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "typings.d.ts"],
  "exclude": ["node_modules", "test", "lib", "**/*.spec.ts"]
}
